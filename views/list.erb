<div class="row">
  <div class="col-lg-12">
    <div class="card nav-card bg-primary mb-3">
      <div class="card-body text-white">
        <h2 class="card-title">
          List of All Dictionary Words! <a href="/dictionary" id="back">Back</a>
        </h2>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <% Array(@current_dictionary).each do |word| %>
    <div class="card bg-light mb-3">
      <div class="card-header">
        <a><a href="/<%= word.id %>"><%= word.the_word %></a></a>
      </div>
      <div class="card-body">
        <ol>
        <% word.definition.each do |a_definition| %>
          <li><%= a_definition[:definition] %></li>
        <% end %>
      </ol>
      </div>
      <div class="card-footer">
        <span id="ts"><%= "Word added on " + word.decodr %></span>
      </div>
    </div>
    <% end %>
  </div>
</div>
