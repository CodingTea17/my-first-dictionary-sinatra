
<div class="row">
  <div class="col-lg-12">
    <div class="card nav-card bg-primary mb-3">
      <div class="card-body text-white">
        <h1 class="card-title">My First Dictionary!<a href="/list" id="list">List All</a></h1>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <p id="dictionary-header">Your Dictionary</p>
      </div>
      <div class="card-body">
        <ul>
        <% @current_dictionary.each do |word| %>
          <li><a href="/<%= word.id %>"><%= word.the_word %></a></li>
        <% end %>
        </ul>
      </div>
      <div class="card-footer text-muted">
        <!-- COOLEST GEM EVER!!!!!! DECODES THE TIME FROM THE ID HASH!!! Giving me PERFECT, UNIQUE, FUNCTIONAL ids for my site!! -->
        Last word added @ <%= @last_word.decodr %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div>
      <% if @error == "loader" %>

      <% elsif @error == "NAW" %>
        <%= "<div class='alert alert-warning' role='alert'>" %>
          <%= "The word you tried to add was invalid. Please try another word."%>
        <%= "</div>" %>
      <% elsif @error == "saved" %>
        <%= "<div class='alert alert-success' role='alert'>" %>
          <%= @last_word.the_word + " was successfully addded! Keep up the great work!"%>
        <%= "</div>" %>
      <% else %>
        <%= "<div class='alert alert-danger' role='alert'>" %>
          <%= @error + " could not be added as it already exists. Please try another word."%>
        <%= "</div>" %>
      <% end %>
    </div>
    <div class="card bg-light">
      <div class="card-body">
        <form action="/new_word" method="post">
          <div class="form-group">
            <label id="nw-label" for="nw">Enter a word:</label>
              <input id="nw" name="new_word" class="form-control form-control-lg" type="text" placeholder="Ex. Apple">
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Add it to your dictionary!</button>
        </form>
      </div>
    </div>
  </div>
</div>
