<div class="row">
  <div class="col-lg-12">
    <div class="card nav-card bg-primary mb-3">
      <div class="card-body text-white">
        <h2 class="card-title">
          Definition(s) for <%= " " + @define.the_word%> <a href="/dictionary" id="back">Back</a>
        </h2>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <% if @empty == "loader" %>

    <% elsif @empty %>
      <%= "<div class='alert alert-warning' role='alert'>" %>
        <%= "No definition was given. Please enter a defintion and try adding it again." %>
      <%= "</div>" %>
    <% else %>
        <%= "<div class='alert alert-success' role='alert'>" %>
          <%= "Awesome definition!" %>
        <%= "</div>" %>
    <% end %>
    <% Array(@definitions).each do |definition| %>
    <div class="card bg-light mb-3">
      <div class="card-body">
        <%= definition[:definition] %>
      </div>
      <div class="card-footer">
        <span id="ts"><%= "Added on " + definition[:timestamp].strftime("%m/%d/%Y") + " at " + definition[:timestamp].strftime("%l:%M %p") %></span>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="card bg-light mb-3">
      <div class="card-body">
        <form action="/<%= @define.id %>" method="post">
          <div class="form-group">
            <label id="nd-label" for="nd"></label>
              <textarea id="nd" name="new_definition" class="form-control form-control-lg" type="text-area" placeholder="Ex. A crisp, sweet fruit most commonly found in the colors red, green, and yellow" rows="2"></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Add this definition!</button>
        </form>
      </div>
    </div>
  </div>
</div>
